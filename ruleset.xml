    <!-- ================================================================= -->
    <!-- REGLAS DE METADATOS (FLOWS Y VALIDATION RULES)                    -->
    <!-- ================================================================= -->

    <!-- 5. Flows: Descripción Obligatoria -->
    <rule name="FlowDescriptionRequired"
          language="xml"
          message="⚠️ FLOW: El Flow debe tener una descripción completa."
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <description>Es obligatorio documentar qué hace el Flow.</description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='Flow']
                       [
                         count(.//*[local-name()='description']) = 0
                         or
                         normalize-space(.//*[local-name()='description']) = ''
                       ]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <!-- ================================================================= -->
    <!-- REGLAS PARA CAMPOS Y OBJETOS                                      -->
    <!-- ================================================================= -->

    <!-- DEBUG BASE: ¿PMD ve el nodo CustomField? (Debe saltar SIEMPRE) -->
    <rule name="R1_Debug_ParentExists"
          language="xml"
          message="[DEBUG] Se encontró un nodo CustomField raíz"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>5</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='CustomField']
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <!-- CASO 1: DETECTAR AUSENCIA (Debe dispararse si borras la etiqueta) -->

    <!-- Variante A: Count children = 0 -->
    <rule name="R1_Missing_VarA_Count"
          language="xml"
          message="[Missing-A] Falta descripción (count=0)"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='CustomField'][count(*[local-name()='description']) = 0]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <!-- Variante B: Not child exists -->
    <rule name="R1_Missing_VarB_Not"
          language="xml"
          message="[Missing-B] Falta descripción (not existence)"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='CustomField'][not(*[local-name()='description'])]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>


    <!-- CASO 2: DETECTAR VACIO (Debe dispararse con <description></description>) -->

    <!-- Variante C: String Length del nodo (.) -->
    <rule name="R1_Empty_VarC_StringLen"
          language="xml"
          message="[Empty-C] Descripción vacía (string-length . = 0)"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='description'][string-length(normalize-space(.)) = 0]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <!-- Variante D: Not Text Node -->
    <rule name="R1_Empty_VarD_NotText"
          language="xml"
          message="[Empty-D] Descripción vacía (not text())"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='description'][not(text())]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <!-- Variante E: Equals Empty String -->
    <rule name="R1_Empty_VarE_EqualsEmpty"
          language="xml"
          message="[Empty-E] Descripción vacía (equal '')"
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    //*[local-name()='description'][normalize-space(.) = '']
                    ]]>
                </value>
            </property>
        </properties>
    </rule>


