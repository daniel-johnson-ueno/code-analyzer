    <rule name="CustomObjectDescriptionRequired"
          language="xml"
          message="Todos los Custom Objects deben tener una descripción."
          class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
        <description>
            Verifica que el campo description exista y no esté vacío.
        </description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                <![CDATA[
                //*:CustomObject[
                    count(*:description) = 0
                    or
                    string-length(*:description/text/@Text) = 0
                ]
                ]]>
                </value>
            </property>
        </properties>
    </rule>



